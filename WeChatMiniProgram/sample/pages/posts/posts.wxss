swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
  height: 600rpx;
}

.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-auther-date {
  /* margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx; */
  margin: 10px 0 20px 10rpx; /* 简写 上右下左 */

  display: flex;  /* 使用弹性盒子模型实现内容的居中 */
  flex-direction: row;
  align-items: center;
}

.post-auther{
  width: 60rpx;
  height: 60rpx;
  /* vertical-align: middle; 实现垂直居中  最好使用弹性盒子模型来实现垂直居中 */
}

.post-date{
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10px;
  color: #333; /* #333是网站标题常用的颜色，#000太黑了 */
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 10px;
}

.post-content{
  font-size: 28rpx;
  color: #666;/*#666是正文常用的颜色*/
  letter-spacing: 2rpx; /*文字间距 */
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-like{
  font-size: 26rpx;
  margin-left: 20rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-like-image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.post-like-font{
  margin-right: 40rpx;
}